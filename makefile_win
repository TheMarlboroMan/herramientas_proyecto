#Definiciones.
LINKARQUITECTURA=-lmingw32
UNIDAD_DISCO=K
MINGW32_INCLUDE=/mingw_dev/include
MINGW32_LIB=/mingw_dev/lib

BASE_FLAGS_WIN=-DWINCOMPIL=1 -D__NO_INLINE__ -Wno-deprecated -Wall -ansi -pedantic -std=c++11 -I$(UNIDAD_DISCO):$(MINGW32_INCLUDE) -L$(UNIDAD_DISCO):$(MINGW32_LIB)

CFLAGS= -c $(BASE_FLAGS_WIN)
CFLAGS_TARGET_FINAL=$(BASE_FLAGS_WIN)
CC=g++
LINKER=-L. -lDanSDL2 $(LINKARQUITECTURA) -lSDL2main -lSDL2 -lSDL2_mixer -lSDL2_image -static-libgcc -static-libstdc++

include makefile_comun
