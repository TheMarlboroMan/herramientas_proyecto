#Machine specifics.
DIR_OBJ=objects

SYSTEM_FLAGS=-DWINCOMPIL=1 -D__NO_INLINE__

#Commands.
CLEAN=if exist "$(DIR_OBJ)" rmdir $(DIR_OBJ) /S /Q && if exist libtools.a del libtools.a
CREATE_OBJ_DIR=	if not exist $(DIR_OBJ) mkdir $(DIR_OBJ)

#Build specifics.
#OPTIMIZATION=-O2
DEBUG=-g
#WITH_DEBUG_CODE=-DWITH_DEBUG_CODE
DISABLE_ASSERT=-DNDEBUG=1

#Fixed compiler definitions.
CC=g++
INCLUDES=
WARNING_FLAGS=-Wno-deprecated -Wall
FLAGS_BASE= -fno-rtti -ansi -pedantic -std=c++14 $(SYSTEM_FLAGS)
CFLAGS=-c $(DEBUG) $(OPTIMIZATION) $(FLAGS_BASE) $(WARNING_FLAGS) $(INCLUDES)

include make/core
